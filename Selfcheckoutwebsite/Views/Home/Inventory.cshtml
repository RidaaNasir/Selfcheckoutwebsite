
@{
    ViewBag.Title = "Itemlist";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
    }

    .admin-panel {
        background-color: #fff;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 20px;
        padding: 20px;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 20px;
    }

    .inventory-table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    thead {
        background-color: purple;
        color: #fff;
    }

    th {
        font-weight: bold;
    }

    tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tbody tr:hover {
        background-color: #e0e0e0;
    }

    .actions {
        display: flex;
        justify-content: space-between;
    }

    .edit-btn,
    .delete-btn {
        padding: 5px 10px;
        border: none;
        cursor: pointer;
    }

    .edit-btn {
        background-color: #0074cc;
        color: #fff;
    }

    .delete-btn {
        background-color: #cc0000;
        color: #fff;
    }

        .edit-btn:hover,
        .delete-btn:hover {
            filter: brightness(0.9);
        }
    </style> 

    
</head>
<body>
    <div class="admin-panel">
        <h1>Inventory Management</h1>

        <table class="inventory-table">
            <thead>
                <tr>

                    <th>Product Name</th>
                    <th>Product Barcode</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var productsinventory in Model) //we use loop to see the record in the database , client is the variable which will take us to the users action in the model Client master
                {
                    <tr>
                        <td>@productsinventory.Product_Name</td> @*client is the data from the database through the C# Controller in the backend action basically 'client' is the variable where the whole data is saving and client_id is the frontend *@
                        <td>@productsinventory.Item_Code </td> @*Full_Name is the table column names to store the data accordingly *@
                        <td>@productsinventory.Quantity</td>
                        <td>@productsinventory.Unit_Price</td>
                        <td>
                            <a href="@Url.Action("EditInventory", "Home", new { id = productsinventory.Product_Name })" class="action-button">Edit</a> @*edit button infront of every user*@
                            @*<a href="@Url.Action("EditInventory", "Home", new { id = productsinventory.Product_Name })" class="action-button">Delete</a>*@ @*edit button infront of every user*@
                            <a href="#" class="delete-btn" onclick="deleteRow(this)">Delete</a>@*whe delete button pressed the following row will be deleted *@
                        </td>
                    </tr>
                    
                }

        </table>
    </div>
    <script>
        function deleteRow(button) {
            var row = button.parentNode.parentNode;
            row.parentNode.removeChild(row);
        }
    </script>
</body>

