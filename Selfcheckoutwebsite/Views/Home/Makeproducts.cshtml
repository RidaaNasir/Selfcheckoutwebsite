@model Selfcheckoutwebsite.Models.Makeproducts
@{
    ViewBag.Title = "Makeproducts";
    Layout = "~/Views/Shared/Adminlayout.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
    }

    .container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    h1 {
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
    }

    input[type="text"],
    input[type="number"] {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    button {
        background-color: purple;
        color: #fff;
        border: none;
        padding: 11px 24px;
        border-radius: 33px;
        cursor: pointer;
    }

        button:hover {
            background-color: rgb(76, 6, 76);
        }

    .container {
        display: flex;
        align-items: center;
    }

    #form-container {
        flex: 1;
    }

    #camera-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid #ccc;
        margin-left: 20px;
        max-width: 40%; /* You can adjust the width here */
        padding: 10px;
    }

    #camera-stream {
        max-width: 100%;
    }

    .form-group {
        margin-bottom: 10px;
    }
</style>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Product</title>
    <!-- Include Quagga library for barcode scanning -->
    <script src="https://cdn.jsdelivr.net/npm/quagga@0.12.1/dist/quagga.min.js"></script>
</head>
<body>
    <h1>Create Product</h1>
    <div class="container">
        <div id="form-container">
            <form id="product-form" action="Makeproducts" method="post">
                <div class="form-group">
                    <label for="item-code">Item Code:</label>
                    <input type="text" id="item-code" placeholder="Add barcode" name="Item_Code" required>
                    <button type="button" id="scan-barcode">Scan Barcode</button>
                </div>
                <div class="form-group">
                    <label for="product-title">Product Title:</label>
                    <input type="text" id="product-title" placeholder="Type here" name="Product_Name" required>
                </div>
                @*<div class="form-group">
            <label for="item-label">Item Label:</label>
            <input type="text" id="item-label" placeholder="Type here">
        </div>*@
                <div class="form-group">
                    <label for="image-url">Image URL:</label>
                    <input type="text" id="image-url" placeholder="Add image URL">
                </div>
                <div class="form-group">
                  <label for="price">Price:</label>
                  <input type="number" id="price" step="0.001" placeholder="Select" name="Unit_Price" required>
                 </div>
                @*<div class="form-group">
                  <label for="price">Label: </label>
                  <input type="text" id="price" step="0.001" placeholder="Select" name="Price_Label" required>
                 </div>*@
                
                <div class="form-group">
                    <label for="in-stock-count">Quantity:</label>
                    <input type="number" id="in-stock-count" placeholder="Select" name="Quantity" required>
                </div>
                <a href="@Url.Action("Makeproducts", "Home")">
                    <button type="submit">Save Item</button>
                </a>
            </form>
        </div>
        <div id="camera-container">
            <video id="camera-stream" autoplay="true" playsinline="true"></video>
        </div>
    </div>
    <script>
        const cameraStream = document.getElementById('camera-stream');
        const barcodeReaderInput = document.getElementById('item-code');
        const scanBarcodeButton = document.getElementById('scan-barcode');
        let isScanning = false;

        function toggleScanner() {
            if (!isScanning) {
                Quagga.start();
            } else {
                Quagga.stop();
            }
            isScanning = !isScanning;
        }

        function handleBarcodeDetection(result) {
            console.log('Scanned barcode:', result.codeResult.code);
            barcodeReaderInput.value = result.codeResult.code;
            toggleScanner();
        }

        function openCamera() {
            navigator.mediaDevices.getUserMedia({ video: true })
                .then(function (stream) {
                    cameraStream.srcObject = stream;
                    Quagga.init({
                        inputStream: {
                            name: "Live",
                            type: "LiveStream",
                            target: cameraStream,
                        },
                        decoder: {
                            readers: ["ean_reader"], // Use the EAN barcode reader
                        },
                    }, function (err) {
                        if (err) {
                            console.error("Error initializing QuaggaJS:", err);
                            return;
                        }
                        toggleScanner();
                    });

                    Quagga.onDetected(handleBarcodeDetection);
                })
                .catch(function (error) {
                    console.error('Error accessing the camera:', error);
                });
        }

        scanBarcodeButton.addEventListener('click', function () {
            openCamera(); // Open the camera for barcode scanning
        });
    </script>
</body>
</html>

