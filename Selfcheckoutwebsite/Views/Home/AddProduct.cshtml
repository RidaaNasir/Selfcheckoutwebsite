            <label for="item-code">Item Code:</label>
            <input type="text" id="item-code" placeholder="Add barcode" required>
        </div>
        <div class="form-group">
            <label for="product-title">Product Title:</label>
            <input type="text" id="product-title" placeholder="Type here" required>
        </div>
        <div class="form-group">
