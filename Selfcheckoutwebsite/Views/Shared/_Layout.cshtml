        </div>
        <!-- ordered list -->
        <ul>
            <!-- li.item{<a></a>}*5 -->
            <li class="item"><a href="@Url.Action("Start", "FirstPage")">Home</a></li>
            <li class="item"><a href="@Url.Action("about", "FirstPage")">About</a></li>
            <li class="item"><a href="@Url.Action("Contactus", "FirstPage")">Contact Us</a></li>
            <li class="item"><a href="@Url.Action("Services", "FirstPage")">Services</a></li>
            <nav>
                @*<span>.</span>*@
                <a href="@Url.Action("Cart", "FirstPage")" class="cart-icon">&#128722;</a>
            </nav>
        </ul>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer>
        <div class="footer">
            Copyright &copy;www.MySelfCheckout.com. All rights reserved
        </div>
    </footer>

